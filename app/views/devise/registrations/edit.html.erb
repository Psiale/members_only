
  
  <h2 class="is-size-2 has-text-centered">Edit <%= resource_name.to_s.humanize %></h2>
<div class="columns is-multiline is-centered">

  <div class="column  is-two-thirds">
  <div class="box has-background-grey-lighter has-text-centered">
  <div class="box has-background-warning">



<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
  <div class="label">
    <%= f.label :email, class: "is-size-4" %><br />
    </div>
    <div class="control">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-size-4" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
  <div class="label">
    <%= f.label :password, class: "has-text-centered is-size-4" %> <p class="has-text-centered is-size-4"><i>(leave blank if you don't want to change it)</i></p><br />
    </div>
    <div class="control">
    <%= f.password_field :password, autocomplete: "new-password", class: "input is-size-4"  %>
    <% if @minimum_password_length %>
      <br />
     <p class="has-text-centered is-size-5"> <%= @minimum_password_length %> characters minimum</p>
    <br />
    <% end %>
    </div>
  </div>
  

  <div class="field">
    <p class="has-text-centered is-size-4"><%= f.label :password_confirmation %></p><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-size-4" %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: "is-size-4" %> <p class="is-size-5"><i>(we need your current password to confirm your changes)</i></p><br />
    <%= f.password_field :current_password, autocomplete: "current-password" , class: "input is-size-4" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" , class: "button is-primary" %>
  </div>
<% end %>

<br/>

<p class=" is-size-4">Unhappy? </p> <br/> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-danger" %>




    </div>
    </div>
  </div>
  
</div>
<p class="has-text-centered">
<%= link_to "Back", :back, class: "button is-center is-success" %>
</p>