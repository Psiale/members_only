
  <h2 class="is-size-2 has-text-centered"><%= resource_name.to_s.humanize %> Sign up</h2>
<div class="columns is-multiline is-centered">

  <div class="column  is-two-thirds">
  <div class="box has-background-grey-lighter has-text-centered">
  <div class="box has-background-warning">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "is-size-4"  %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-size-4" %>
  </div>

  <div class="field">
    <%= f.label :full_name, class: "is-size-4"  %>
    <%= f.text_field :name, autocomplete: "Your full name", class: "input is-size-4" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "is-size-4"  %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "input is-size-4" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "is-size-4"  %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-size-4" %>
  </div>

  <div>
  <%= f.label "Are you a member? Tell me the truth 🧐!", class: "is-size-4"  %>
  <%= f.check_box :member, class: "is-size-4" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "button is-primary"  %>
  </div>
<% end %>




    </div>
    </div>
  </div>
  
</div>

</div>
<p class="has-text-centered">
<%= link_to "Back", :back, class: "button is-center is-success" %>
</p>