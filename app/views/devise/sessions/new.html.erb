
  <h2 class="is-size-2 has-text-centered">Log in</h2>
<div class="columns is-multiline is-centered">

  <div class="column  is-two-thirds">
  <div class="box has-background-grey-lighter has-text-centered">
  <div class="box has-background-warning">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "is-size-4"   %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-size-4" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "is-size-4"   %>
    <%= f.password_field :password, autocomplete: "current-password", class: "input is-size-4" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "is-size-4"   %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "button is-primary"   %>
  </div>
<% end %>


    </div>
    </div>
  </div>
  
</div>

</div>
<p class="has-text-centered">
<%= link_to "Back", :back, class: "button is-center is-success" %>
</p>