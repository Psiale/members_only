<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<div class="columns is-multiline is-centered">
  <% @posts.each do |post| %>
  <div class="column  is-one-quarter">
  <div class="box has-text-centered">
  <div class="box has-background-warning">
    <h2 class=" is-size-2"><%= post.title %></h2>
    <p class="is-size-4"><%= post.content %></p>
    <% if user_signed_in? %>
    <strong><%= post.user_id %></strong>
    <strong><%= post.user.name %></strong>
    <% end %>
    </div>
    <p class="has-text-centered">

        <%= link_to 'Show', post, class: "button is-primary" %> 


       <%= link_to 'Edit', edit_post_path(post), class: "button is-primary" %>

    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-primary" %>
    
    </p>

    </div>
  </div>
  <% end %>
</div>

<br>

<%= link_to 'New Post', new_post_path %>
